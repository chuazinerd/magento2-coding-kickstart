<?xml version="1.0"?>
<page layout="2columns-right"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main">
            <block name="blog.post.detail" template="Chuazinerd_Blog::post/detail.phtml"/>
            <container htmlTag="h1" htmlId="blog-header" >
                <block name="blog.post.detail.extra" template="Chuazinerd_Blog::post/sidebar.phtml"/>
            </container>

        </referenceContainer>
        <referenceContainer name="sidebar.main">
            <block name="blog.post.sidebar" template="Chuazinerd_Blog::post/sidebar.phtml"/>
        </referenceContainer>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="wishlist_sidebar" template="Chuazinerd_Blog::wishlist/sidebar.phtml"/>
    </body>
</page>
